#!/usr/bin/env ruby

require 'rubygems'
require 'crafti'
# require_relative '../lib/crafti'

options = Crafti::CLI.parse(ARGV)

if options.event == "generate"
  Crafti::FileReader.generate(options.template_path)
else
  puts "That command is not supported."
  exit
end

